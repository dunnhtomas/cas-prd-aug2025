{
  "name": "cas-prd-aug2025",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "tracker": "node tracker/index.js",
    "web": "powershell -NoLogo -NoProfile -Command \"cd web; npx next dev -p 3000\"",
    "web:port": "powershell -NoLogo -NoProfile -Command \"param([int]$p=3000); cd web; npx next dev -p $p\"",
    "start:all": "concurrently -n tracker,web -c blue,green \"npm:tracker\" \"npm:web\"",
    "force:start": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -File ./force-start.ps1",
    "verify:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -File ./verify.ps1",
    "verify": "node ./verify.js",
    "dev": "concurrently -n tracker,web -c cyan,magenta \"npm:tracker:watch\" \"npm:web\"",
    "tracker:watch": "nodemon --watch tracker tracker/index.js",
    "build:web": "cd web && next build",
    "start:web:prod": "cd web && next start -p 3000",
    "prod": "npm run build:web && npm run start:web:prod",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name auto",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "ci:all": "npm run lint && npm run verify",
    "docker:build:web": "docker build -f Dockerfile.web -t cas-web .",
    "docker:build:tracker": "docker build -f Dockerfile.tracker -t cas-tracker .",
    "docker:up": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "test": "playwright test",
    "pretest": "npx playwright install",
    "test:seo": "playwright test"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "express": "^4.18.2",
    "next": "13.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@prisma/client": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "13.5.3",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.0.3",
    "playwright": "^1.42.0",
    "prettier": "^3.3.2",
    "prisma": "^5.22.0",
    "typescript": "^5.4.0"
  }
}